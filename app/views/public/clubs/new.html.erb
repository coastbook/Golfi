<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2">
    <div class="shadow p-3 mb-5 bg-white rounded">

      <h2 class="p-3 mb-2 bg-dark text-white">クラブ新規登録</h2>
      <% if @club.errors.any? %>
        <%= @club.errors.count %>件のエラー
        <div id="error_explanation">
          <ul>
            <% @club.errors.full_messages.each do |message| %>
              <li class="error_message"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p id="notice"></p>
        <%= form_with model:@club, url: public_clubs_path, method: :post do |f| %>
          <div class="form-group", style="text-align: center;">
            <p id="notice"></p>
              <<%= f.label :Type %>>
              <br><%= f.text_field :club_type, :size=>"50", placeholder: "クラブの種類" %>
          </div>
          <div class="form-group", style="text-align: center;">
            <p id="notice"></p>
              <<%= f.label :Name %>>
              <br><%= f.text_area :club_name, rows: '3', cols: '50', placeholder: "クラブの名前" %>
          </div>
          <div class="form-group" style="text-align: center;">
            <p id="notice"></p>
              <%= f.submit "新規登録", class: "btn btn-outline-success"  %>
          </div>
        <% end %>

    </div>
  </div>
</div>