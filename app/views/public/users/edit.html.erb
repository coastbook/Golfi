<%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
<div class="container" style="margin-top: 50px;">
 <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-12" style="text-align: left;">
        <h2 class="p-3 mb-2 bg-dark text-white">マイページ</h2>
    </div>
　</div>
    <div class="row">
        <div class="col-md-12" style="text-align: left;margin-top:20px; ">
            <h4 class="text-left">　会員情報編集</h4>
            <table class="table table-hover">
              <tr>
                <th>
                  <%= f.label :氏名 %>
                </th>
                <td>氏名
　　　　　　　  　<%= f.text_field :name,:size=>"40" %>
                </td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td colspan="2"><%= f.text_field :email, :size=>"40",autofocus: true, autocomplete: "email" %></td>
              </tr>
            </table> 
        </div>
    </div>
    <div class="row">
      <div class="col-md-7"style="text-align: left;margin-bottom:20px;margin-top: 30px; margin-bottom: 60px;">
        <div class="actions">
          <button class="btn btn-outline-success w-100" type="submit">編集内容を保存する</button>
        </div>
        <% end %>
      </div>
      <div class="col-md-5"style="text-align: center;margin-top: 30px; margin-bottom: 60px;">
      </div>
    </div>
  </div>
</div>
  
