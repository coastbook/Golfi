<div class="container" style="margin-top: 50px;">
  <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-3" style="text-align: left;">
　　　<table class="table">
      <h2 class="p-3 mb-2 bg-dark text-white">コラム詳細</h2>
    </div>
    <div class="col-md-8", style="margin-top: 50px;">
      <tr>
      <% if @column.image.attached? %>
        <%= image_tag @column.image, size: "250x250" %>
      <% else %>
        <%= image_tag 'no_image', size: "250x250" %>
      <% end %>
      </tr>
     </table>
      </div>
    <div class="col-md-6 offset-1"style="margin-top: 150px;">
    <table class="table">
      <tbody>
      <td>コラム名</td><td><%= @column.title %></td>
      <tr><td>コラム</td><td><%= @column.body %></td></tr>
          <tr>
            <td><%= link_to "一覧に戻る", public_columns_path, class: "btn btn-outline-success" %></td>
            <% if @column.user == current_user %>
              <td><%= link_to '編集する', edit_public_column_path(@column.id), class: "btn btn-outline-success" %></td>
              <td><%= link_to "削除", public_column_path(@column), class: "btn btn-outline-success", method: :delete %></td>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          </tr>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</div>