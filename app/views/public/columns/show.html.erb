<div class="container" style="margin-top: 50px;">
  <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">

    <div class="col-md-3" style="text-align: left;">
　　　<table class="table">
      <h2 class="p-3 mb-2 bg-dark text-white">コラム詳細</h2>
    </div>
    <div class="col-md-8", style="margin-top: 50px;">
      <tr>
      <% if @column.image.attached? %>
        <%= image_tag @column.image, size: "250x250" %>
      <% else %>
        <%= image_tag asset_path("no_image.jpg"), size: "250x250" %>
      <% end %>
      </tr>
     </table>
      </div>
    <div class="col-md-8 offset-1" style="margin-top: 150px;">
    <table class="table">
      <tbody>
        <tr><td>User</td><td><%= link_to @column.user.name, public_user_path(@column.user.id) %></td></tr>
        <tr><td>Title</td><td><%= @column.title %></td></tr>
        <tr><td>Column</td><td><%= @column.body %></td></tr>
        <tr>
          <td>
            <% if @column.favorited_by?(current_user) %>
            <p>
              <%= link_to public_column_favorites_path(@column), method: :delete, remote: true do %>
                ♥ Like
              <% end %>

            </p>
            <% else %>
            <p>
              <%= link_to public_column_favorites_path(@column), method: :post, remote: true do %>
                ♡ Like
              <% end %>

            </p>
            <% end %>
          </td>
          <td>：<%= @column.favorites.count %>人</td>
        </tr>
        <tr>
          <td class="col-md-1"><%= link_to "一覧に戻る", public_columns_path, class: "btn btn-outline-success" %></td>
          <% if @column.user == current_user %>
            <td class="col-md-2"><%= link_to '編集する', edit_public_column_path(@column.id), class: "btn btn-outline-success" %></td>
            <td class="col-md-1"><%= link_to "削除", public_column_path(@column), class: "btn btn-outline-danger", method: :delete %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>

    <div>
      <%= form_with model: [:public, @column, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに記入してください" %>
        <%= f.submit "送信する" %>
      <% end %>

      <p>Comment：<i class="far fa-comment"></i> <%= @column.post_comments.count %></p>

      <% @column.post_comments.each do |post_comment| %>
        <br><%= link_to post_comment.user.name, public_user_path(post_comment.user.id) %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>

        <br><%= post_comment.comment %>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", public_column_post_comment_path(post_comment.column, post_comment), class: "btn btn-outline-danger", method: :delete %>
        <% end %>
        <br>----------------------------------------------------------------------------------

      <% end %>
    </div>

  </div>
  </div>
</div>