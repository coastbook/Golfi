<div class="container" style="margin-top: 50px;">
  <div class="col-md-8 offset-md-2"> 
  <div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <div class="col-md-8 offset-1"style="margin-top: 30px;">
      <h2 class="p-3 mb-2 bg-dark text-white">コラム新規登録</h2>
      <p id="notice"></p>
        <%= form_with model:@column, url: public_columns_path, method: :post do |f| %>
          <form>
            <div class="form-group", style="text-align: left;",>
              <p id="notice"></p>
               <%= f.label :コラム画像 %>
               <%= f.file_field :image, placeholder: "選択されていません", accept: "image/*" %>
            </div>
            <div class="form-group">
              <div class="col-sm-10">
                <p id="notice"></p>
                <%= f.label :コラム名 %>
                <%= f.text_field :title, placeholder: "コラム名" %>
              </div>
              <div class="form-group">
                <p id="notice"></p>
                <%= f.label :コラム %>
                <%= f.text_area :body, placeholder: "ここに本文を記述します" %>
              </div>
              <div class="form-group" style="text-align: center;">
                <p id="notice"></p>
                <%= f.submit "新規登録", class: "btn btn-outline-success"  %>
              </div>
            </div>
          </form>
        <% end %>
    </div>
  </div>
  </div>
  </div>
</div>