<div class="container" style="margin-top: 50px;">
  <div class="shadow p-3 mb-5 bg-white rounded">
    <div class="row">
      <div class="col-md-3" style="text-align: left;">
　　　  <table class="table">
        <h2 class="p-3 mb-2 bg-dark text-white">コラム詳細</h2>
      </div>
      <div class="col-md-8", style="margin-top: 50px;">
        <tr>
          <% if @column.image.attached? %>
            <%= image_tag @column.image, size: "250x250" %>
          <% else %>
            <%= image_tag 'no_image', size: "250x250" %>
          <% end %>
        </tr>
         </table>
      </div>
    <div class="col-md-8 offset-1"style="margin-top: 150px;">
    <table class="table">
      <tbody>
        <tr><td>Name</td><td><%= link_to @column.user.name, admin_user_path(@column.user.id) %></td></tr>
        <tr><td>Title</td><td><%= @column.title %></td></tr>
        <tr><td>Column</td><td><%= @column.body %></td></tr>
        <tr>
          <td>
            <p><i class="far fa-heart"></i> <%= @column.favorites.count %></p>
          <td>
        </tr>
      　<tr>
        　<td class="col-md-1"><%= link_to "一覧に戻る", admin_columns_path, class: "btn btn-outline-success" %></td>
          <td class="col-md-3">
            <%= link_to '編集する', edit_admin_column_path(@column.id), class: "btn btn-outline-success w-75" %>
            <%= link_to "削除", admin_column_path(@column), class: "btn btn-outline-danger", method: :delete %>
          </td>
        </tr> 
      </tbody>
    </table>
    </div>
    
    <div>
      <p>Comment：<i class="far fa-comment"></i> <%= @column.post_comments.count %></p>
      <% @column.post_comments.each do |post_comment| %>
        <br><%= link_to post_comment.user.name, admin_user_path(post_comment.user.id) %>
        <%= post_comment.created_at.strftime('%Y/%m/%d(%a) %X') %>
        <br><%= post_comment.comment %>
          <%= link_to "削除", admin_column_post_comment_path(post_comment.column, post_comment), class: "btn btn-outline-danger", method: :delete %>
        <br>----------------------------------------------------------------------------------
      <% end %>
    </div>
    
    </div>
  </div>
</div>