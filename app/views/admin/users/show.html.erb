<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-md-8 offset-md-2"> <%#.offset-md-1 は .col-md-9 を 1 カラムぶん右に移動%>
      <div class="shadow p-3 mb-5 bg-white rounded">



  <table class="table">
    <thead>
      <h2 class="p-3 mb-2 bg-dark text-white">会員詳細</h2>
    </thead>

    <tbody>
      <tr><td>ID</td><td><%= @user.id %></td></tr>
      <tr><td>Name</td><td><%= @user.name %></td></tr>
      <tr><td>e-mail</td><td><%= @user.email %></td></tr>
    </tbody>
  </table>

  <div class="text-center">
   <%= link_to '編集する', edit_admin_user_path(@user.id), class: "btn btn-outline-success w-25" %>
   <%= link_to "削除", admin_user_path(@user), class: "btn btn-outline-danger", method: :delete %>
  </div>

      </div>
    </div>
  </div>
</div>